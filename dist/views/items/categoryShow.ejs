<%- include('../particles/header.ejs') %>

<%- include('../particles/navigation.ejs') %>




<% if(items.length == 0){ %>
    <div class="section">
      <p>В категорий ничего не найдено(если это сообщение появилось, всё плохо)
      </p>
    </div>
  <% }else{%>
    <% for (let i = 0; i < items.length; i++) { %>
        <div class="section">
            <a href="/items/show/<%= items[i].id %>">
                <h2 class="section__title"><%= items[i].title %></h2>
                <img class="section__image" src="/img/items/<%= items[i].image %>">
            </a>
        </div>
    <% } %>
  <%} %>
 
